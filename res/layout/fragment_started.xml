<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="fill_vertical"
	    android:orientation="vertical" >

	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/imageView2"
	        android:layout_marginTop="46dp"
	        android:layout_weight="1"
	        android:text="The server should be displayed in the server browser, if it cannot be found it can be manualy added by pressing the add server button"
	        android:textAppearance="?android:attr/textAppearanceSmall" />

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="match_parent"
	        android:layout_height="200dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView2"
	        android:layout_marginTop="132dp"
	        android:layout_weight="1"
	        android:scaleType="fitXY"
	        android:src="@drawable/btn_black" />

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="350dp"
	        android:layout_height="100dp"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/textView1"
	        android:layout_marginTop="75dp"
	        android:layout_weight="1"
	        android:adjustViewBounds="false"
	        android:scaleType="fitXY"
	        android:src="@android:drawable/btn_default_small" />

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/imageView1"
	        android:layout_marginTop="60dp"
	        android:layout_weight="1"
	        android:text="Run the server application on your PC and connect your android device to your WiFi Network"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="27dp"
	        android:layout_weight="1"
	        android:text="Goto the Anvil Project Site and get the free server software: www.Hodgeproject.com/Anvil"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <Button
	        android:id="@+id/button_ready"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView4"
	        android:layout_weight="1"
	        android:text="I&apos;m Ready" />

	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textView3"
	        android:layout_marginTop="35dp"
	        android:layout_weight="1"
	        android:text="COMPLETE CONTROL!"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	</RelativeLayout>

</ScrollView>
